<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="w-full bg-zinc-900 p-2 text-white">
    <a href="/" class="text-blue-500 ">Back to home</a>
    <h2 class="text-3xl mt-3 tracking-tighter mb-3"> ALL USERS</h2>
    <div class="users flex gap-7 flex-wrap">
      <% if(users.length > 0){ %>
        <% users.forEach(function(user){ %>
          <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
            <div class="w-full h-52 bg-red-500 rounded-lg overflow-hidden">
              <img src="<%= user.image %>" class="w-full h-full object-cover " alt="">  
            </div>
            <h3 class="text-xl tracking-tighter mt-3"><%= user.name %></h3>  <!--  -->
            <h5 class="text-zinc-500"><%= user.email %></h5>    <!--  -->
            <div class="flex gap-3 mt-10">
              <a href="" class="text-zinc-200">Edit User</a>
              <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
            </div>
          </div>
         <% }) %>
      <% } else { %>
        <h3 class="text-zinc-500">No User Yet ! </h3>
      <% } %> 
    </div>
  </div>
</body>
</html>